<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/curvededges_white">

    <ImageView
        android:id="@+id/addImage"
        android:scaleType="centerCrop"
        android:layout_margin="1dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder" />

        </RelativeLayout>

     <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_weight="0.80">
    
        <EditText
            android:id="@+id/editActivityName"
            android:hint="@string/title_post"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/editActivityName" />

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/editActivityDate" />

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/editActivityTime" />

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/editActivityLocation" />

        <EditText
            android:id="@+id/editActivityDate"
            android:hint="@string/date_post"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/editActivityTime"
            android:hint="@string/time_post"
            android:inputType="datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/editActivityLocation"
            android:hint="@string/location_post"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/participantsText"
            android:text="@string/participants_post"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editActivityParticipants"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/descriptionText"
            android:text="@string/description_text_post"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editActivityDescription"
            android:gravity="start"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:inputType="textMultiLine"
            android:background="@drawable/curvededges_white" />

        <Button
            android:id="@+id/postActivityBtn"
            android:text="@string/post"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

</LinearLayout>