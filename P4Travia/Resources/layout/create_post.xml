<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF9F1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/curvededges_white">

    <ImageView
        android:id="@+id/addImage"
        android:scaleType="centerCrop"
        android:layout_margin="1dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder" />

        </RelativeLayout>

     <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_weight="0.80">
   
        <EditText
            android:id="@+id/editActivityName"
            android:hint="@string/title_post"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/round_calendar_today_black_18"
            android:id="@+id/calenderIcon"
                android:layout_width="25dp"
            android:layout_height="25dp"
                android:layout_centerVertical="true"/>
         
         <EditText
            android:id="@+id/editActivityDate"
            android:hint="@string/date_post"
            android:layout_toRightOf="@+id/calenderIcon"
            android:inputType="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />
        
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/round_schedule_black_18"
                android:id="@+id/timeIcon"
                android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            />
 
        <EditText
            android:id="@+id/editActivityTime"
            android:hint="@string/time_post"
                android:layout_toRightOf="@+id/timeIcon"
            android:inputType="datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />
       
        </RelativeLayout>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/round_room_black_18"
                android:id="@+id/locationIcon"
                android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
             />
             
            <EditText
            android:id="@+id/editActivityLocation"
            android:hint="@string/location_post"
            android:layout_toRightOf="@+id/locationIcon"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />
        
        </RelativeLayout>

          <TextView
            android:id="@+id/participantsText"
            android:text="@string/participants_post" 
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       
            <ImageView
            android:src="@mipmap/round_person_black_18"
                android:id="@+id/personIcon"
                
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"/>

        

        <EditText
            android:id="@+id/editActivityParticipants"
            android:inputType="text"
                android:layout_toRightOf="@+id/personIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" />
 
            </RelativeLayout>

        <TextView
            android:id="@+id/descriptionText"
            android:text="@string/description_text_post"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editActivityDescription"
            android:gravity="start"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textMultiLine"
            android:background="@drawable/curvededges_white" />

        <Button
            android:id="@+id/postActivityBtn"
            android:text="@string/post"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cancelActivityBtn"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:backgroundTint="#C4C4C4"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>