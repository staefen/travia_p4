<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/categories_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:gravity="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp" />

    <GridLayout
        android:numColumns="2"
        android:rowCount="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/categorygrid"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp">

        <Button
            android:text="@string/cat_all"
            android:id="@+id/All"
            android:textSize="28sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:text="@string/cat_food"
            android:id="@+id/Food"
            android:textSize="28sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:text="@string/cat_music"
            android:id="@+id/Music"
            android:textSize="28sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp" />

        <Button
            android:text="@string/cat_nature"
            android:id="@+id/Nature"
            android:textSize="28sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:text="@string/cat_sports"
            android:id="@+id/Sports"
            android:textSize="28sp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:text="@string/cat_culture"
            android:id="@+id/Culture"
            android:textSize="28sp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:text="@string/cat_creativity"
            android:id="@+id/Creativity"
            android:textSize="20sp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:text="@string/cat_other"
            android:id="@+id/Other"
            android:textSize="28sp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"/>
    </GridLayout>

</LinearLayout>
