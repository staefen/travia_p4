<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF9F1"
    android:id="@+id/maintestpage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/categories_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoriestitle"
        android:gravity="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp" />

    <GridLayout
        android:numColumns="2"
        android:rowCount="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categorygrid"
        android:padding="30dp"
        android:layout_below="@+id/categoriestitle">


        <androidx.cardview.widget.CardView
            android:id="@+id/cat_all"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/allimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/all_cat"
                    android:contentDescription="description" />

            <TextView
                 android:id="@+id/othertext"
                 android:text="@string/cat_all"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:text="@string/cat_food"
            android:id="@+id/Food"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/foodrounded"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/food_cat"/>

            <TextView
                 android:id="@+id/foodtext"
                 android:text="@string/cat_food"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Music"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/musicrounded"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/music_cat"/>

            <TextView
                 android:id="@+id/musictext"
                 android:text="@string/cat_music"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Nature"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/natureimage"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/nature_cat"/>

            <TextView
                 android:id="@+id/naturetext"
                 android:text="@string/cat_nature"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Sport"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/sportsimage"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/sport_cat"/>

            <TextView
                 android:id="@+id/sportstext"
                 android:text="@string/cat_sports"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Culture"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/cultureimage"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/culture_cat"/>

            <TextView
                 android:id="@+id/culturetext"
                 android:text="@string/cat_culture"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Creativity"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/creativityimage"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/creativity_cat"/>

            <TextView
                 android:id="@+id/creativitytext"
                 android:text="@string/cat_creativity"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Other"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="97dp"
            android:layout_width="146dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:clickable="true">
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                 android:id="@+id/otherimage"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"                                   
                 android:scaleType="fitXY"
                 android:src="@drawable/other_cat"/>

            <TextView
                 android:id="@+id/othertext"
                 android:text="@string/cat_other"
                 android:textSize="28sp"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    
    </GridLayout>

</RelativeLayout>