<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="40dp">

	<ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/enterLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/enter_languages"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enterLanguageDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/enter_languages_desc"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <CheckBox
        android:id="@+id/danish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/danish"
        android:onClick="language_ItemSelected"
        />
    <CheckBox
        android:id="@+id/norwegian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/norwegian"
        android:onClick="language_ItemSelected"
        />
    <CheckBox
        android:id="@+id/swedish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swedish"
        android:onClick="language_ItemSelected"
        />
    <CheckBox
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/english"
        android:onClick="language_ItemSelected"
        />
    <CheckBox
        android:id="@+id/german"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/german"
        android:onClick="language_ItemSelected"
        />
    <CheckBox
        android:id="@+id/french"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/french"
        android:onClick="language_ItemSelected"
        />
   <CheckBox
        android:id="@+id/spanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spanish"
        android:onClick="language_ItemSelected"
        />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"> 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horisontal">

        <Button
        android:id="@+id/btnSkip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/white"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnNext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnSkip1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="120dp"
        android:text="@string/next"
        android:textSize="25sp"
        android:padding="8dp"
        android:textAllCaps="false"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>